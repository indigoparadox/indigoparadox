
/* vim: set syntax=css: */

.iwz-error-404 {
   font-size: 10em;
   display: table;
   margin: 10px auto;
}

.iwz-error-not-found {
   color: black;
   display: table;
   max-width: 600px;
   margin: 10px auto;
}

.iwz-error-not-found h2 {
   font-size: 1em;
   background: navy;
   color: white;
   margin: 0;
   padding: 3px;
}

.iwz-error-not-found p {
   margin: 10px;
}

.iwz-error-not-found a, .iwz-error-not-found a:visited {
   color: blue;
}

.iwz-error-x {
   font-family: Arial, Helvetica, sans-serif;
   font-size: 28px;
   text-align: center;
   border: 2px solid black;
   border-radius: 50%;
   filter: drop-shadow( 3px 3px 2px dimgray );
   background: red;
   color: white;
   display: block;
   margin: 0 10px 10px 5px;
   width: 32px;
   height: 32px;
   float: left;
}

